    <main>
      <header>
        <h1 id="title"> Patient information
        </h1>
      </header>
      <div class="patient_information_field">

        <div class="col">
          <i class="fa-solid fa-circle-user"></i>
          Patient name
        </div>
        <div class="col">
          <i class="fa-solid fa-envelope"></i>
          Email
        </div>
        <div class="col">
          <i class="fa-solid fa-map-location"></i>
          Address
        </div>
        <div class="col">
          <i class="fa-solid fa-phone"></i>
          Phone number
        </div>

      </div>

      <div class="patient_information">
        <div class="col">
          {{patients.name}}
        </div>
        <div class="col">
          {{patients.email}}
        </div>
        <div class="col">
          {{patients.address}}
        </div>
        <div class="col">
          {{patients.phoneNumber}}
        </div>

      </div>
    </main>


    <div class="editBtn">
      <i class="fa-solid fa-pen"></i>
      <a href="/patient/patientEdit/{{patient.pId}}">Edit detail</a>
    </div>

  </div>

  <script>
    const navTabs = document.querySelectorAll("#nav-tabs > a");
    navTabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        navTabs.forEach((tab) => {
          tab.classList.remove("active");
        });
        tab.classList.add("active");
      });
    });


  </script>