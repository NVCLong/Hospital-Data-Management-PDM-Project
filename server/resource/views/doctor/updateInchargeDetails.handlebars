<body>
    <div class="site-wrap">
        <nav class="site-nav">
            <div class="name">Patient information</div>

            <ul id="sidebar">
                <li>
                    <div class="nav_icon">
                        <i class="fa-solid fa-user-doctor"></i>
                        <a href="#">Patient information</a>
                    </div>
                    <div class="nav_icon">
                        <i class="fa-brands fa-wpforms"></i>
                        <a href="/doctor/patientlist">In charge form</a>
                    </div>
                    <div class="nav_icon">
                        <i class="fa-solid fa-list"></i>
                        <a href="/doctor/getAllAppointments">Appointment list</a>
                    </div>
                    <div class="nav_icon">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Log out</button>
                    </div>
                </li>

            </ul>

            <div class="note">
                <h3>PDM Project</h3>
                <p>Hospital Data Management</p>
            </div>
        </nav>

        <main>
            <header>
                <h1 id="title"> Update patient status
                </h1>
            </header>

            <form id="status" method="POST" action="/doctor/updateInchargeForm/{{patient.pId}}?_method=PATCH">
                <input value="{{patient.details}}" type="text" tabindex="1" name="details" required autofocus>
                <button name="submit" type="submit" id="contact-submit" data-submit="...Sending"> Submit </button>
            </form>
    </main>

    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Log Out ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Do you want to log out ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="logoutBTN">Log out</button>
                </div>
            </div>
        </div>
    </div>

    <form id="logoutForm" method="post" action="/authentication/logout"></form>

    <script>
        const navTabs = document.querySelectorAll("#nav-tabs > a");
        navTabs.forEach((tab) => {
            tab.addEventListener("click", () => {
                navTabs.forEach((tab) => {
                    tab.classList.remove("active");
                });
                tab.classList.add("active");
            });
        });

        let logoutForm= document.getElementById("logoutForm");
        let logoutBTN= document.getElementById("logoutBTN")
        console.log(logoutBTN);
        logoutBTN.onclick= function(){
            logoutForm.submit();
        }


    </script>
