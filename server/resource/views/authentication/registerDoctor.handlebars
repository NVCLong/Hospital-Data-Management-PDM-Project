<div class="container">
        <div class="doctor-form-box">
            <h1 id="title">REGISTER FOR DOCTOR</h1>
            <form method="post" action="/authentication/register">
                <div class="doctor-input-group">
                    <div class="doctor-input-field" id="usernameField">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" placeholder="Enter your username" name="name" required>
                    </div>

                    <div class="doctor-input-field">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" name="email" placeholder="Enter your email" required>
                    </div>
                    <div class="doctor-input-field">
                        <i class="fa-solid fa-phone"></i>
                        <input type="text" placeholder="Enter your mobile phone" name="phone" required>

                    </div>
                     <div class="doctor-input-field">
                        <i class="fa-solid fa-map"></i>
                        <input type="text" placeholder="Enter your position" required name="position">
                    </div>

                    <div class="doctor-input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" placeholder="Enter your password" name="password" required>
                    </div>

                    <div class="doctor-input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="text" placeholder="Enter your password"  required  name="deptCode">
                    </div>


                <a href="/authentication/doctor/login" style="color: #ffffff; text-decoration: none;">Login?</a>
                </div>

                <div class="doctor-btn-field">
                    <button type="submit" class="doctor-registerBtn">REGISTER</button>
                </div>

            </form>
        </div>
    </div>
